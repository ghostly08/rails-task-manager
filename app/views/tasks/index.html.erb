<div class="main-container">
  <h1>Tasks List</h1>
  <div class="btn-new-task">
    <%= link_to 'new task', tasks_new_path %>
  </div>
  <ul>
    <% @tasks.each do |task| %>
    <li><%= link_to task.title, task_path(task.id)%><li>
      <div class="details-box">
        <p><%= task.details %></p>
      </div>
    <%end%>
  </ul>
</div>
