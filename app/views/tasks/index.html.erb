<div class="main-container">
  <h1>Tasks List</h1>
  <div class="btn-new-task">
    <%= link_to 'new task', tasks_new_path %>
  </div>

    <% @tasks.each do |task| %>
      <div class="tasks-list">
        <h2 class="task-title"><%= task.title %><h2>
        <div id="details" class="details-box">
          <p><%= task.details %></p>
        </div>
      </div>
    <%end%>
</div>
