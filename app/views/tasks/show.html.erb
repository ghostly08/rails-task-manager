<div class="main-container">

  <div class="task-show">
    <h2><%= @task.title %></h2>
    <%= form_for(@task) do |f| %>
      <%= f.label :completed %>
      <%= f.check_box :completed %>
    <% end  %>
    <h4><%= @task.details %></h4>
  </div>

  <div class="links-show">
    <%= link_to "Back to list", tasks_path %>
    <h5 class="btn-new-task"><%= link_to "Edit Task", go_edit_path %><h5>
  </div>
</div>
